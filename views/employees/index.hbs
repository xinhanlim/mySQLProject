{{#extends "base"}}

{{#block "content"}}
<h1> Employee </h1>
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Department</th>
        </tr>
    </thead>
    <tbody>
        {{#each employees}}
        <tr> 
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.name}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{/block}}

{{/extends}}